<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:xu="http://www.xmldb.org/xupdate"
        xmlns:oxf="http://www.orbeon.com/oxf/processors">

    <!-- Files to serve directly -->
    <files path-info="*.gif"/>
    <files path-info="*.css"/>
    <files path-info="*.pdf"/>
    <files path-info="*.js"/>
    <files path-info="*.png"/>
    <files path-info="*.jpg"/>
    <files path-info="*.wsdl"/>
    <files path-info="*.html" mime-type="text/html"/>
    <files path-info="*.java" mime-type="text/plain"/>
    <files path-info="*.txt" mime-type="text/plain"/>
    <files path-info="*.xq" mime-type="text/plain"/>

    <!-- CSS generated by a pipeline -->
    <page id="layout-css" path-info="/oxf-theme/orbeon-layout.cssd" model="/oxf-theme/orbeon-layout.xpl"/>

    <!-- Examples portal -->
    <page id="home" path-info="/" model="/examples-portal/page-flow.xpl"/>
    <page path-info="/goto-example/.+" matcher="oxf:perl5-matcher" model="/examples-portal/page-flow.xpl"/>
    <page path-info="/goto-source/.+" matcher="oxf:perl5-matcher" model="/examples-portal/page-flow.xpl"/>

    <!-- Dispatch resources for the examples. This is necessary, since portlets cannot serve resources directly. -->
    <page path-info="/example-resources/.*" matcher="oxf:perl5-matcher" model="/examples/dispatch.xpl"/>
    <page path-info="/direct/.*" matcher="oxf:perl5-matcher" model="/examples/dispatch.xpl"/>

    <!-- Struts Examples -->
    <page path-info="/examples-struts/.*" matcher="oxf:perl5-matcher" model="/examples-standalone/struts-view/model/struts.xpl"/>

    <!-- Examples that do not work within the examples portal -->
    <page path-info="/examples-standalone/.*" matcher="oxf:perl5-matcher" model="/examples/dispatch.xpl"/>

    <!-- Standalone Counter example -->
    <page path-info="/counter*" model="/examples/counter/page-flow.xpl"/>

    <!-- Standalone BizDoc example -->
    <page path-info="/bizdoc*" model="/examples/bizdoc/page-flow.xpl"/>

    <!-- Standalone Blog example -->
    <page path-info="/blog*" model="/examples/blog/page-flow.xpl"/>

    <!-- Standalone Employees example -->
    <page path-info="/employees*" model="/examples/employees/page-flow.xpl"/>

    <!-- Standalone XForms Upload example -->
    <page path-info="/xforms-upload*" model="/examples/xforms/xforms-upload/page-flow.xpl"/>

    <!-- Standalone PDF Upload example (contribution) -->
    <page path-info="/pdf-upload*" model="/examples/pdf/pdf-upload/page-flow.xpl"/>

    <!-- Struts and JSF -->
    <page path-info="/faces/*" model="/jsf/config/model.xpl"/>
    <page path-info="/examples/jsf*" model="/jsf/config/model.xpl"/>
    <page path-info="/WEB-INF/*" view="/struts-view/model/struts.xpl"/>

    <!-- Documentation -->
    <page path-info="/examples/doc" view="/doc/stub-view.xml"/>
    <page path-info="/doc/book" model="/doc/book/model.xpl"/>

    <page path-info="/doc/(.*)" matcher="oxf:perl5-matcher" 
            xforms="/doc/xforms.xml" model="/doc/model.xpl">
        <param ref="/form/page"/>
    </page>

    <!-- XPL specification -->
    <page path-info="/2005/SUBM-xpl-20050222/" model="/doc/xpl-spec/model.xpl"/>
    <page path-info="/2005/xpl/" model="/doc/xpl-spec/model.xpl"/>

    <!-- Source code -->
    <page path-info="/examples/source"
        xforms="/source/source-xforms.xml"
        model="/source/source-model.xpl"/>

    <!-- Portal -->
    <page path-info="/examples/portal/*" model="/portal/config/model.xpl"/>

    <!-- OXFMark -->
    <page path-info="/examples/oxfmark-machines"
        model="/oxfmark/machines.xpl"/>
    <page path-info="/examples/oxfmark-vms"
        model="/oxfmark/vms.xpl"/>

    <!-- "Not Found" page displayed when no page matches the request URL -->
    <page id="not-found" path-info="/not-found" view="/config/not-found.xml"/>

    <epilogue url="/config/epilogue.xpl"/>
    <not-found-handler page="not-found"/>

</config>
