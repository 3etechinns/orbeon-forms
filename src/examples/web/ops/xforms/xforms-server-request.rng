<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
         xmlns="http://relaxng.org/ns/structure/1.0"
         xmlns:xforms="http://www.w3.org/2002/xforms"
         xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <include href="xforms-server-common.rng"/>

    <start>
        <element name="xxforms:event-request">
            <element name="xxforms:static-state">
                <data type="string"/>
            </element>
            <element name="xxforms:dynamic-state">
                <data type="string"/>
            </element>
            <optional>
                <element name="xxforms:files">
                    <oneOrMore>
                        <element name="parameter">
                            <element name="name">
                                <data type="string"/>
                            </element>
                            <optional>
                                <element name="filename">
                                    <data type="string"/>
                                </element>
                            </optional>
                            <optional>
                                <element name="content-type">
                                    <data type="string"/>
                                </element>
                            </optional>
                            <optional>
                                <element name="content-length">
                                    <data type="integer"/>
                                </element>
                            </optional>
                            <element name="value">
                                <optional>
                                    <attribute name="xsi:type">
                                        <data type="QName"/>
                                    </attribute>
                                </optional>
                                <optional>
                                    <data type="string"/>
                                </optional>
                            </element>
                        </element>
                    </oneOrMore>
                </element>
            </optional>
            <element name="xxforms:action">
                <zeroOrMore>
                    <element name="xxforms:event">
                        <optional>
                            <attribute name="name">
                                <ref name="xformsActionName"/>
                            </attribute>
                            <attribute name="source-control-id">
                                <data type="string"/>
                            </attribute>
                            <optional>
                                <attribute name="other-control-id">
                                    <data type="string"/>
                                </attribute>
                            </optional>
                            <optional>
                                <data type="string"/>
                            </optional>
                        </optional>
                    </element>
                </zeroOrMore>
            </element>
        </element>
    </start>

</grammar>
