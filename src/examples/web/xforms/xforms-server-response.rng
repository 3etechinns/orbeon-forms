<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
         xmlns="http://relaxng.org/ns/structure/1.0"
         xmlns:xforms="http://www.w3.org/2002/xforms"
         xmlns:xxforms="http://orbeon.org/oxf/xml/xforms">

    <include href="xforms-server-common.rng"/>

    <start>
        <element name="xxforms:event-response">
            <optional>
                <element name="xxforms:static-state">
                    <data type="string"/>
                </element>
            </optional>
            <element name="xxforms:dynamic-state">
                <data type="string"/>
            </element>
            <element name="xxforms:action">
                <element name="xxforms:control-values">
                    <zeroOrMore>
                        <choice>
                            <element name="xxforms:control">
                                <attribute name="id">
                                    <data type="string"/>
                                </attribute>
                                <optional>
                                    <attribute name="hint"/>
                                </optional>
                                <optional>
                                    <attribute name="alert"/>
                                </optional>
                                <optional>
                                    <attribute name="label"/>
                                </optional>
                                <optional>
                                    <attribute name="help"/>
                                </optional>
                                <optional>
                                    <attribute name="readonly">
                                        <choice>
                                            <value>true</value>
                                            <value>false</value>
                                        </choice>
                                    </attribute>
                                </optional>
                                <optional>
                                    <attribute name="required">
                                        <choice>
                                            <value>true</value>
                                            <value>false</value>
                                        </choice>
                                    </attribute>
                                </optional>
                                <optional>
                                    <attribute name="relevant">
                                        <choice>
                                            <value>true</value>
                                            <value>false</value>
                                        </choice>
                                    </attribute>
                                </optional>
                                <optional>
                                    <attribute name="valid">
                                        <choice>
                                            <value>true</value>
                                            <value>false</value>
                                        </choice>
                                    </attribute>
                                </optional>
                                <optional>
                                    <attribute name="type"/>
                                </optional>
                                <optional>
                                    <data type="string"/>
                                </optional>
                            </element>
                            <element name="xxforms:copy-repeat-template">
                                <attribute name="id">
                                    <data type="string"/>
                                </attribute>
                                <attribute name="id-suffix">
                                    <data type="string"/>
                                </attribute>
                            </element>
                            <element name="xxforms:delete-element">
                                <attribute name="id">
                                    <data type="string"/>
                                </attribute>
                            </element>
                        </choice>
                    </zeroOrMore>
                </element>
                <element name="xxforms:divs">
                    <zeroOrMore>
                        <element name="xxforms:div">
                            <attribute name="id"/>
                            <attribute name="visibility">
                                <choice>
                                    <value>hidden</value>
                                    <value>visible</value>
                                </choice>
                            </attribute>
                        </element>
                    </zeroOrMore>
                </element>
                <element name="xxforms:repeats">
                    <zeroOrMore>
                        <ref name="repeatInfo"/>
                    </zeroOrMore>
                </element>
                <element name="xxforms:itemsets">
                    <zeroOrMore>
                        <element name="xxforms:itemset">
                            <attribute name="id"/>
                            <zeroOrMore>
                                <element name="xxforms:item">
                                    <attribute name="label"/>
                                    <attribute name="value"/>
                                </element>
                            </zeroOrMore>
                        </element>
                    </zeroOrMore>
                </element>
                <optional>
                    <element name="xxforms:submission">
                        <attribute name="action"/>
                        <attribute name="method"/>
                    </element>
                </optional>
            </element>
        </element>
    </start>

    <define name="repeatInfo">
        <element name="xxforms:repeat">
            <attribute name="id"/>
            <attribute name="occurs">
                <data type="nonNegativeInteger"/>
            </attribute>
            <attribute name="index">
                <data type="positiveInteger"/>
            </attribute>
            <zeroOrMore>
                <ref name="repeatInfo"/>
            </zeroOrMore>
        </element>
    </define>

</grammar>
