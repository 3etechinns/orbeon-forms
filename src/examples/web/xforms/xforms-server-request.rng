<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
         xmlns="http://relaxng.org/ns/structure/1.0"
         xmlns:xforms="http://www.w3.org/2002/xforms"
         xmlns:xxforms="http://orbeon.org/oxf/xml/xforms">

    <include href="xforms-server-common.rng"/>

    <start>
        <element name="xxforms:event-request">
            <element name="xxforms:event">
                <attribute name="name">
                    <ref name="xformsActionName"/>
                </attribute>
                <attribute name="source-control-id">
                    <data type="string"/>
                </attribute>
            </element>
            <element name="xxforms:models">
                <data type="string"/>
            </element>
            <element name="xxforms:controls">
                <optional>
                    <attribute name="xml:base"/>
                </optional>
                <zeroOrMore>
                    <ref name="anyElement"/>
                </zeroOrMore>
            </element>
            <ref name="xformsInstances"/>
        </element>
    </start>

</grammar>
