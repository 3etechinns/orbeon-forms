<xhtml:html xmlns:f="http://orbeon.org/oxf/xml/formatting" xmlns:xhtml="http://www.w3.org/1999/xhtml"
            xmlns:xforms="http://www.w3.org/2002/xforms">

    <xhtml:head><xhtml:title>Counter</xhtml:title></xhtml:head>
    <xhtml:body>
        <xforms:group ref="/instance">
            <xhtml:p>The current value is: <xforms:output ref="counter"/>.</xhtml:p>
            <xhtml:p>
                <xforms:submit>
                    <xforms:label>Increment</xforms:label>
                    <xforms:setvalue ref="action">increment</xforms:setvalue>
                </xforms:submit>
                
                <xforms:submit>
                    <xforms:label>Reset</xforms:label>
                    <xforms:setvalue ref="action">reset</xforms:setvalue>
                </xforms:submit>
            </xhtml:p>
        </xforms:group>
    </xhtml:body>
</xhtml:html>
