<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:xu="http://www.xmldb.org/xupdate">

    <page path-info="/counter" xforms="form.xml" view="view.xml">
        <action when="/instance/action = 'increment'" action="increment.xsl">
            <result>
                <xu:update select="/instance/counter">
                    <xu:value-of select="document('input:action')/new-value/text()"/>
                </xu:update>
            </result>
        </action>
        <action when="/instance/action = 'reset'">
            <result>
                <xu:update select="/instance/counter">0</xu:update>
            </result>
        </action>
    </page>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
