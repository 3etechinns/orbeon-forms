<div xmlns:xforms="http://www.w3.org/2002/xforms"
     xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <h2 style="margin-top: 0">Document Information</h2>
    <p>
        <table>
            <tr>
                <th>Identifier</th>
                <td>
                    <xforms:output ref="document-id"/>
                </td>
            </tr>
            <xsl:variable name="instance" select="doc('input:instance')" as="document-node()"/>
            <xsl:if test="$instance/form/message != ''">
                <tr>
                    <th align="right">Action</th>
                    <td>
                        <xsl:choose>
                            <xsl:when test="$instance/form/message = 'save-success'">
                                <span style="color: green">Document saved!</span>
                            </xsl:when>
                            <xsl:when test="$instance/form/message = 'save-failure'">
                                <span style="color: red">Document not saved! There may be errors on both pages.</span>
                            </xsl:when>
                        </xsl:choose>
                    </td>
                </tr>
            </xsl:if>
        </table>
    </p>
</div>