<xs:schema
    xmlns:claim="http://orbeon.org/oxf/examples/bizdoc/claim"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified"
    attributeFormDefault="unqualified">

    <xs:import namespace="http://orbeon.org/oxf/examples/bizdoc/claim" schemaLocation="../schema/claim-schema.xsd"/>

    <xs:element name="form">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="action" type="xs:string"/>
                <xs:element name="message" type="xs:string"/>
                <xs:element name="show-errors" type="xs:string"/>
                <xs:element name="document-id" type="xs:string"/>
                <xs:element name="document">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element ref="claim:claim"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
