    <!-- Specify the driver for the eXist database -->
    <driver-class-name>org.exist.xmldb.DatabaseImpl</driver-class-name>
    <!-- This causes the use of the embedded eXist database -->
    <uri>xmldb:exist:///</uri>
    <!-- Example of URL for non-embedded use -->
<!--    <uri>xmldb:exist://localhost:9999/exist/xmlrpc</uri>-->
    <!-- Optional username and password -->
    <username>admin</username>
    <password>admin</password>
</datasource>
