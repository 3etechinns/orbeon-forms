<xforms:model xmlns:xforms="http://www.w3.org/2002/xforms">
    <xforms:instance>
        <form>
            <tortilla/>
            <document>
                <carrier>ups</carrier>
                <payment/>
                <wrapping/>
                <taste/>
            </document>
            <data>
                <tortilla-selections>
                    <tortilla-selection type="flour">Flour</tortilla-selection>
                    <tortilla-selection type="corn">Corn</tortilla-selection>
                </tortilla-selections>
                <payments>
            	   <payment value="cash" label="Cash"/>
            	   <payment value="credit" label="Credit"/>
            	</payments>
            	<tastes>
            	   <taste value="vanilla" label="Vanilla"/>
            	   <taste value="strawberry" label="Strawberry"/>
            	</tastes>
            </data>
        </form>
    </xforms:instance>
</xforms:model>
