<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:xu="http://www.xmldb.org/xupdate">

    <page id="xforms-wizard-firstname" path-info="/xforms-wizard"
          xforms="form.xml"
          view="step1-firstname.xml">
        <action when="/form/action = 'next'">
            <result page="xforms-wizard-lastname">
                <xu:update select="/form/user"><xu:copy-of select="document('input:instance')/form/user/*"/></xu:update>
            </result>
        </action>
    </page>

    <page id="xforms-wizard-lastname" path-info="/xforms-wizard/lastname"
          xforms="form.xml"
          view="step2-lastname.xml">
        <action when="/form/action = 'previous'">
            <result page="xforms-wizard-firstname">
                <xu:update select="/form/user"><xu:copy-of select="document('input:instance')/form/user/*"/></xu:update>
            </result>
        </action>
        <action when="/form/action = 'next'">
            <result page="xforms-wizard-ssn">
                <xu:update select="/form/user"><xu:copy-of select="document('input:instance')/form/user/*"/></xu:update>
            </result>
        </action>
    </page>

    <page id="xforms-wizard-ssn" path-info="/xforms-wizard/ssn"
          xforms="form.xml"
          view="step3-ssn.xml">
        <action when="/form/action = 'previous'">
            <result page="xforms-wizard-lastname">
                <xu:update select="/form/user"><xu:copy-of select="document('input:instance')/form/user/*"/></xu:update>
            </result>
        </action>
        <action when="/form/action = 'finish'">
            <result page="xforms-wizard-summary">
                <xu:update select="/form/user"><xu:copy-of select="document('input:instance')/form/user/*"/></xu:update>
            </result>
        </action>
    </page>

    <page id="xforms-wizard-summary" path-info="/xforms-wizard/summary"
          xforms="form.xml"
          view="step4-summary.xsl"/>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
