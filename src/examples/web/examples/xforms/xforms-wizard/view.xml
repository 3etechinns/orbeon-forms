<xhtml:html xmlns:xforms="http://www.w3.org/2002/xforms"
    xmlns:f="http://orbeon.org/oxf/xml/formatting" 
    xmlns:xhtml="http://www.w3.org/1999/xhtml"
    xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
    xmlns:ev="http://www.w3.org/2001/xml-events">
    
    <xhtml:head>
        <xhtml:title>XForms Wizard</xhtml:title>
        <xforms:model xmlns:xforms="http://www.w3.org/2002/xforms"
                xmlns:xs="http://www.w3.org/2001/XMLSchema">
            <xforms:instance id="text">
                <user>
                    <firstname/>
                    <lastname/>
                    <age/>
                </user>
            </xforms:instance>
            <xforms:instance id="buttons-state">
                <buttons-state>
                    <finish relevant="false"/>
                </buttons-state>
            </xforms:instance>
            <xforms:instance id="formatted">
                <formated-instance/>
            </xforms:instance>                
            <xforms:bind nodeset="/user/age" constraint="number(.) >= 0"/>
            <xforms:bind nodeset="instance('buttons-state')/finish"
                relevant="@relevant = 'true'"/>
            <xforms:bind nodeset="instance('formatted')" 
                calculate="saxon:serialize(xxforms:call-xpl
                    ('oxf:/oxf-theme/format.xpl', 'data', instance('text'), 'data')/*, 'html')"/>
        </xforms:model>
    </xhtml:head>
    <xhtml:body>
        <xhtml:p>
            <xforms:group ref="user">
                <xforms:switch>
                    <xforms:case id="firstname">
                        <xhtml:p>Step 1 of 3</xhtml:p>
                        <xhtml:p>
                            <xforms:input ref="firstname">
                                <xforms:label xhtml:class="fixed-width">First name:</xforms:label>
                            </xforms:input>
                        </xhtml:p>
                        <xhtml:p>
                            <xforms:trigger>
                                <xforms:label>Next ></xforms:label>
                                <xforms:toggle ev:event="DOMActivate" case="lastname"/>
                            </xforms:trigger>
                        </xhtml:p>
                    </xforms:case>
                    <xforms:case id="lastname">
                        <xhtml:p>Step 2 of 3</xhtml:p>
                        <xhtml:p>
                            <xforms:input ref="lastname">
                                <xforms:label xhtml:class="fixed-width">Last name:</xforms:label>
                            </xforms:input>
                        </xhtml:p>
                        <xhtml:p>
                            <xforms:trigger>
                                <xforms:label>&lt; Previous</xforms:label>
                                <xforms:toggle ev:event="DOMActivate" case="firstname"/>
                            </xforms:trigger>
                            <xforms:trigger>
                                <xforms:label>Next ></xforms:label>
                                <xforms:toggle ev:event="DOMActivate" case="age"/>
                            </xforms:trigger>
                        </xhtml:p>
                    </xforms:case>
                    <xforms:case id="age">
                        <xhtml:p>Step 3 of 3</xhtml:p>
                        <xhtml:p>
                            <xforms:input ref="age" incremental="true">
                                <xforms:label xhtml:class="fixed-width">Age:</xforms:label>
                                <xforms:action ev:event="xforms-valid">
                                    <xforms:setvalue ref="instance('buttons-state')/finish/@relevant">true</xforms:setvalue>
                                </xforms:action>
                                <xforms:action ev:event="xforms-invalid">
                                    <xforms:setvalue ref="instance('buttons-state')/finish/@relevant">false</xforms:setvalue>
                                </xforms:action>
                            </xforms:input>
                        </xhtml:p>
                        <xhtml:p>
                            <xforms:trigger>
                                <xforms:label>&lt; Previous</xforms:label>
                                <xforms:toggle ev:event="DOMActivate" case="lastname"/>
                            </xforms:trigger>
                            <xforms:trigger ref="instance('buttons-state')/finish">
                                <xforms:label>Finish ></xforms:label>
                                <xforms:toggle ev:event="DOMActivate" case="showinstance"/>
                            </xforms:trigger>
                        </xhtml:p>
                    </xforms:case>
                    <xforms:case id="showinstance">
                        <xhtml:p>You are done!</xhtml:p>
                        <xhtml:p>The data you have entered has been collected in this XML document:</xhtml:p>
                        <xforms:output ref="instance('formatted')" xhtml:class="xforms-xhtml"/>
                        <xhtml:p>
                            <xforms:trigger>
                                <xforms:label>Go back to start</xforms:label>
                                <xforms:toggle ev:event="DOMActivate" case="firstname"/>
                            </xforms:trigger>
                        </xhtml:p>
                    </xforms:case>
                </xforms:switch>
            </xforms:group>
        </xhtml:p>
    </xhtml:body>
</xhtml:html>
