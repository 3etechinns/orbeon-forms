<xhtml:html xmlns:xforms="http://www.w3.org/2002/xforms"
        xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:f="http://orbeon.org/oxf/xml/formatting" xmlns:xhtml="http://www.w3.org/1999/xhtml">
    <xhtml:head>
        <xhtml:title>XForms Repeating Elements</xhtml:title>
        <xforms:model>
            <xforms:instance>
                <form>
                    <department name="Finance">
                        <employee firstname="John" lastname="Smith"/>
                        <employee firstname="Peter" lastname="Strain"/>
                        <employee firstname="Carl" lastname="Thompson"/>
                        <employee firstname="" lastname=""/>
                    </department>
                    <department name="Engineering">
                        <employee firstname="Letticia" lastname="Vallejo"/>
                        <employee firstname="Bruce" lastname="Wilson"/>
                        <employee firstname="David" lastname="Williams"/>
                        <employee firstname="" lastname=""/>
                    </department>
                    <department name="">
                        <employee firstname="" lastname=""/>
                    </department>
                </form>
            </xforms:instance>
            <xforms:submission method="post"/>
            <xforms:bind nodeset="/form/department" relevant="count(following-sibling::department) > 0"/>
            <xforms:bind nodeset="/form/department/employee" relevant="count(following-sibling::employee) > 0"/>
        </xforms:model>
    </xhtml:head>
    <xhtml:body>
        <xforms:group ref="/form">
            <table border="0" cellpadding="10" cellspacing="0">
                <tr>
                    <td colspan="2">
                        <xforms:repeat nodeset="department" id="departmentSet">
                            <div style="margin-bottom: 1em; padding-left: 1em">
                                <p>
                                    <xforms:input ref="@name" xhtml:size="10">
                                        <xforms:label class="fixed-width">Department:</xforms:label>
                                    </xforms:input>
                                </p>
                                <xforms:repeat nodeset="employee" id="employeeSet">
                                    <p style="margin-left: 2em; margin: 0.5em; white-space: nowrap">
                                        <xhtml:span class="fixed-width">Employee:</xhtml:span>
                                        <xforms:input ref="@firstname" xhtml:size="10"/>
                                        <xforms:input ref="@lastname" xhtml:size="10"/>
                                    </p>
                                </xforms:repeat>
                            </div>
                        </xforms:repeat>
                        <xhtml:fieldset>
                            <xhtml:p>
                                <xhtml:span class="fixed-width">Department:</xhtml:span>
                                <xforms:trigger>
                                    <xforms:label>Add</xforms:label>
                                    <xforms:insert ev:event="DOMActivate" nodeset="/form/department"
                                        at="index('departmentSet')" position="after"/>
                                </xforms:trigger>
                                <xforms:trigger>
                                    <xforms:label>Remove</xforms:label>
                                    <xforms:delete ev:event="DOMActivate" nodeset="/form/department"
                                        at="index('departmentSet')"/>
                                </xforms:trigger>
                            </xhtml:p>
                            <xhtml:p>
                                <xhtml:span class="fixed-width">Employee:</xhtml:span>
                                <xforms:trigger>
                                    <xforms:label>Add</xforms:label>
                                    <xforms:insert ev:event="DOMActivate" nodeset="/form/department[index('departmentSet')]/employee"
                                        at="index('employeeSet')" position="after"/>
                                </xforms:trigger>
                                <xforms:trigger>
                                    <xforms:label>Remove</xforms:label>
                                    <xforms:delete ev:event="DOMActivate" nodeset="/form/department[index('departmentSet')]/employee"
                                        at="index('employeeSet')"/>
                                </xforms:trigger>
                            </xhtml:p>
                        </xhtml:fieldset>
                    </td>
                </tr>
            </table>
        </xforms:group>
    </xhtml:body>
</xhtml:html>
