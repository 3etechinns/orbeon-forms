<xhtml:html xmlns:f="http://orbeon.org/oxf/xml/formatting" xmlns:xhtml="http://www.w3.org/1999/xhtml">
    <xhtml:body>
        <xhtml:p id="errors-section">
            <script language="JavaScript">
                window.onload =
                    function() {
                        if (window.error) {
                            document.getElementById('errors-section').innerHTML = window.error;
                        } else {
                            window.setTimeout(window.onload, 100);                        
                        }
                    };
            </script>
        </xhtml:p>
    </xhtml:body>
</xhtml:html>
