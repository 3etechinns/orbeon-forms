<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:xu="http://www.xmldb.org/xupdate">

    <page path-info="/xforms-upload"
          xforms="xforms-upload-form.xml"
          model="xforms-upload-model.xpl"
          view="xforms-upload-view.xsl">
        <action when="/form/action = 'ws-upload' and /form/files/file != ''" action="do-ws-upload.xpl"/>
        <action when="/form/action = 'db-upload' and /form/files/file != ''" action="do-db-upload.xpl"/>
    </page>

    <page path-info="/xforms-uploaded-image"
          xforms="xforms-uploaded-image-form.xml"
          model="xforms-uploaded-image-model.xpl">
    </page>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
