<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:xu="http://www.xmldb.org/xupdate"
        xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
        instance-passing="forward">

    <!-- ========== Files to serve directly ========== -->
    <files path-info="*.gif"/>
    <files path-info="*.css"/>
    <files path-info="*.js"/>
    <files path-info="*.png"/>
    <files path-info="*.jpg"/>
    <files path-info="*.wsdl"/>
    <files path-info="*.html" mime-type="text/html"/>
    <files path-info="*.java" mime-type="text/plain"/>
    <files path-info="*.txt" mime-type="text/plain"/>

    <!-- ========== Pages ========== -->

    <page id="detail" path-info="/dmv/detail" view="detail/detail-view.xhtml">

    </page>

    <!-- ========== Services ========== -->

    <!-- Read services -->
    <page id="list-documents" path-info="/dmv/service/lists-documents" view="services/list-documents.xpl"/>
    <page id="read-document" path-info="/dmv/service/read-document" view="services/read-document.xpl"/>

    <!-- Update services -->
    <page id="save-document" path-info="/dmv/service/save-document">
        <action action="services/save-document.xpl"/>
    </page>
    <page id="delete-document" path-info="/dmv/service/delete-document">
        <action action="services/delete-document.xpl"/>
    </page>
    <page id="delete-all-documents" path-info="/dmv/service/delete-all-documents">
        <action action="services/delete-all-documents.xpl"/>
    </page>

    <!-- ========== Epilogue ========== -->
    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
