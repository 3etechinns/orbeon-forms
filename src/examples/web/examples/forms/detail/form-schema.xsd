<xs:schema
    xmlns:dmv="http://orbeon.org/oxf/examples/dmv"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified"
    attributeFormDefault="unqualified">

    <xs:import namespace="http://orbeon.org/oxf/examples/dmv" schemaLocation="../schema/dmv-schema.xsd"/>

    <!-- Define type for main-instance -->
    <xs:element name="document-info">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="document-id" type="xs:string"/>
                <xs:element name="document-date" type="xs:dateTime"/>
                <xs:element name="document">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element ref="dmv:form"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
            <!--<xs:attribute name="xml:base" type="xs:anyURI" use="optional"/>-->
        </xs:complexType>
    </xs:element>

    <!-- Define type for control-instance -->
    <xs:element name="control">
        <xs:complexType>
            <xs:sequence>
                <xs:any namespace="##targetNamespace" processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>

