<xs:schema targetNamespace="http://orbeon.org/ops/examples/employee-demo/employee"
    xmlns:employee="http://orbeon.org/ops/examples/employee-demo/employee"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified"
    attributeFormDefault="unqualified">

    <xs:element name="employee">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="employee-id" type="xs:string"/>
                <xs:element name="firstname" type="employee:requiredNonEmptyString"/>
                <xs:element name="lastname" type="employee:requiredNonEmptyString"/>
                <xs:element name="phone" type="xs:string"/>
                <xs:element name="title" type="xs:string"/>
                <xs:element name="age" type="employee:optionalPositiveInteger"/>
                <xs:element name="manager-id" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:simpleType name="requiredNonEmptyString">
		<xs:restriction base="xs:string">
			<xs:minLength value="1" />
            <xs:whiteSpace value="collapse"/>
		</xs:restriction>
	</xs:simpleType>

    <xs:simpleType name="optionalPositiveInteger">
		<xs:restriction base="xs:string">
			<xs:pattern value="[0-9]*"/>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>
