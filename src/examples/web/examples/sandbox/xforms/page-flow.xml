<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:oxf="http://www.orbeon.com/oxf/processors"
        xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
        instance-passing="forward">

    <page id="upload" path-info="/xforms-sandbox" view="upload-view.xhtml">
        <action when="/*/action = 'upload' and /*/file != ''"  action="upload-action.xpl">
            <result page="sandbox" transform="oxf:xslt">
                <xsl:transform version="2.0">
                    <xsl:template match="/">
                        <xsl:copy-of select="doc('input:action')"/>
                    </xsl:template>
                </xsl:transform>
            </result>
        </action>
    </page>

    <page id="sandbox" path-info="/xforms-sandbox/sandbox" view="sandbox-view.xpl"/>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
