<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0">

    <include href="xml-rpc-common.rng"/>

    <start>
        <element name="methodResponse">
            <choice>
                <element name="params">
                    <oneOrMore>
                        <element name="param">
                            <ref name="value"/>
                        </element>
                    </oneOrMore>
                </element>
                <element name="fault">
                    <element name="value">
                        <element name="struct">
                            <element name="member">
                                <element name="name">
                                    <value>faultCode</value>
                                </element>
                                <element name="value">
                                    <element name="int">
                                        <data type="integer"/>
                                    </element>
                                </element>
                            </element>
                            <element name="member">
                                <element name="name">
                                    <value>faultString</value>
                                </element>
                                <element name="value">
                                    <element name="string">
                                        <data type="string"/>
                                    </element>
                                </element>
                            </element>
                        </element>
                    </element>
                </element>
            </choice>
        </element>
    </start>

</grammar>
