<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0">

    <define name="value">
        <element name="value">
            <choice>
                <element name="string">
                    <data type="string"/>
                </element>
                <element name="int">
                    <data type="integer"/>
                </element>
                <element name="boolean">
                    <choice>
                        <value>0</value>
                        <value>1</value>
                    </choice>
                </element>
                <element name="struct">
                    <zeroOrMore>
                        <element name="member">
                            <element name="name">
                                <data type="string"/>
                            </element>
                            <ref name="value"/>
                        </element>
                    </zeroOrMore>
                </element>
                <element name="array">
                    <element name="data">
                        <zeroOrMore>
                            <ref name="value"/>
                        </zeroOrMore>
                    </element>
                </element>
                <element name="dateTime.iso8601">
                    <data type="dateTime"/>
                </element>
                <data type="string"/>
            </choice>
        </element>
    </define>

</grammar>
