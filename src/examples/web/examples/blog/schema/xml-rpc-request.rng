<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0">

    <include href="xml-rpc-common.rng"/>

    <start>
        <element name="methodCall">
            <element name="methodName">
                <data type="string"/>
            </element>
            <element name="params">
                <oneOrMore>
                    <element name="param">
                        <ref name="value"/>
                    </element>
                </oneOrMore>
            </element>
        </element>
    </start>

</grammar>
