<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0">

    <start>
        <element name="post">
            <element name="blog-id">
                <data type="string"/>
            </element>
            <element name="username">
                <data type="string"/>
            </element>
            <element name="post-id">
                <data type="string"/>
            </element>
            <element name="title">
                <data type="string"/>
            </element>
            <element name="description">
                <data type="string"/>
            </element>
            <element name="published">
                <data type="boolean"/>
            </element>
            <element name="date-created">
                <data type="dateTime"/>
            </element>
            <optional>
                <element name="categories">
                    <oneOrMore>
                        <element name="category-id">
                            <data type="positiveInteger"/>
                        </element>
                    </oneOrMore>
                </element>
            </optional>
            <optional>
                <element name="comments">
                    <oneOrMore>
                        <element name="comment">
                            <data type="string"/><!-- Allow mixed content; restrict on HTML constructs? -->
                        </element>
                    </oneOrMore>
                </element>
            </optional>
        </element>
    </start>

</grammar>
