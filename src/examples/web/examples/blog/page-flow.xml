<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:oxf="http://www.orbeon.com/oxf/processors"
        xmlns:xu="http://www.xmldb.org/xupdate"
        xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
        instance-passing="forward">

    <!-- Files to serve directly (for standalone operation) -->
    <files path-info="*.gif"/>
    <files path-info="*.css"/>
    <files path-info="*.js"/>
    <files path-info="*.png"/>
    <files path-info="*.jpg"/>
    <files path-info="*.wsdl"/>
    <files path-info="*.html" mime-type="text/html"/>
    <files path-info="*.java" mime-type="text/plain"/>
    <files path-info="*.txt" mime-type="text/plain"/>

    <page path-info="/blog"/>

    <!-- XML-RPC commands -->
    <page path-info="/blog/xmlrpc" model="xml-rpc.xpl"/>

    <!-- Test Create Blog -->
    <page path-info="/blog/test/create-user-blog" model="data-access/test-create-user-blog.xpl"/>

    <!-- Test Create User -->
    <page path-info="/blog/test/create-user" model="data-access/test-create-user.xpl"/>

    <!-- Page for a user's blog -->
    <page path-info="/blog/(.+)/(.+)" matcher="oxf:perl5-matcher"
          xforms="recent-posts/recent-posts-xforms-model.xml"
          model="recent-posts/recent-posts-model.xpl"
          view="recent-posts/recent-posts-view.xsl">
        <param ref="/form/username"/>
        <param ref="/form/blog-id"/>
    </page>

    <!-- Post for one user -->
    <page path-info="/blog/(.+)/post/(.+)" matcher="oxf:perl5-matcher"
          xforms="recent-posts/recent-posts-xforms-model.xml"
          model="recent-posts/recent-posts-model.xpl"
          view="recent-posts/recent-posts-view.xsl">
        <param ref="/form/username"/>
        <param ref="/form/blog-id"/>
    </page>

    <!-- CSS generated by a pipeline (for standalone operation) -->
    <page id="layout-css" path-info="/oxf-theme/orbeon-layout.cssd" model="/oxf-theme/orbeon-layout.xpl"/>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
