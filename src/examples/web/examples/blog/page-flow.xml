<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:oxf="http://www.orbeon.com/oxf/processors"
        xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
        xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
        instance-passing="forward">

    <!-- Files to serve directly (for standalone operation) -->
    <files path-info="*.gif"/>
    <files path-info="*.css"/>
    <files path-info="*.js"/>
    <files path-info="*.png"/>
    <files path-info="*.jpg"/>
    <files path-info="*.wsdl"/>
    <files path-info="*.html" mime-type="text/html"/>
    <files path-info="*.java" mime-type="text/plain"/>
    <files path-info="*.txt" mime-type="text/plain"/>

    <!-- XML-RPC commands -->
    <page path-info="/blog/xmlrpc" model="xml-rpc.xpl"/>

    <!-- Users -->
    <page path-info="/blog/admin/users" model="admin/edit-users/edit-users.xpl" view="admin/edit-users/edit-users.xsl"/>
    <page path-info="/blog/admin/add-user" view="admin/edit-users/edit-users.xpl">
        <action action="admin/edit-users/add-user-action.xpl"/>
    </page>
    <page path-info="/blog/admin/delete-user" view="admin/edit-users/edit-users.xpl">
        <action action="admin/edit-users/delete-user-action.xpl"/>
    </page>

    <!-- Blogs -->
    <page path-info="/blog/admin/blogs" model="admin/edit-blogs/edit-blogs.xpl" view="admin/edit-blogs/edit-blogs.xsl"/>
    <page path-info="/blog/admin/add-blog" view="admin/edit-blogs/list-blogs-only.xpl">
        <action action="admin/edit-blogs/add-blog-action.xpl"/>
    </page>
    <page path-info="/blog/admin/update-blogs" view="admin/edit-blogs/list-blogs-only.xpl">
        <action action="admin/edit-blogs/update-blogs-action.xpl"/>
    </page>
    <page path-info="/blog/admin/delete-blog" view="admin/edit-blogs/list-blogs-only.xpl">
        <action action="admin/edit-blogs/delete-blog-action.xpl"/>
    </page>

    <!-- For tests only -->
    <page path-info="/blog/test-calculate" xforms="test/xforms-model.xml" view="test/view.xsl"/>
    <page path-info="/blog/test/create-user-blog" model="data-access/test-create-user-blog.xpl"/>
    <page path-info="/blog/test/create-user" model="data-access/test-create-user.xpl"/>
    <page path-info="/blog/test/delete-posts" model="data-access/test-delete-posts.xpl"/>

    <!-- A user's blog post with comments -->
    <page id="post" path-info="/blog/([^/]+)/([^/]+)/([^/]+)" matcher="oxf:perl5-matcher"
          default-submission="recent-posts/recent-posts-default-submission.xml"
          model="recent-posts/recent-posts-model.xpl"
          view="recent-posts/recent-posts-view.xpl">
        <setvalue ref="/form/username" matcher-group="1"/>
        <setvalue ref="/form/blog-id" matcher-group="2"/>
        <setvalue ref="/form/post-id" matcher-group="3"/>
        <setvalue ref="/form/format" parameter="format"/>
        <setvalue ref="/form/category" parameter="category"/>
    </page>

    <!-- A user's blog -->
    <page path-info="/blog/([^/]+)/([^/]+)" matcher="oxf:perl5-matcher"
          default-submission="recent-posts/recent-posts-default-submission.xml"
          model="recent-posts/recent-posts-model.xpl"
          view="recent-posts/recent-posts-view.xpl">
        <setvalue ref="/form/username" matcher-group="1"/>
        <setvalue ref="/form/blog-id" matcher-group="2"/>
        <setvalue ref="/form/format" parameter="format"/>
        <setvalue ref="/form/category" parameter="category"/>
    </page>

    <!-- Home Page for a user -->
    <page path-info="/blog/([^/]+)" matcher="oxf:perl5-matcher"
          xforms="user-home/user-home-xforms-model.xml"
          model="user-home/user-home-model.xpl"
          view="user-home/user-home-view.xsl">
        <setvalue ref="/form/username" matcher-group="1"/>
    </page>

    <page path-info="/save-comment">
        <action>
            <result page="post" transform="oxf:xslt" instance-passing="redirect">
                <form xsl:version="2.0" xmlns="">
                    <username><xsl:value-of select="doc('input:instance')/form/username"/></username>
                    <blog-id><xsl:value-of select="doc('input:instance')/form/blog-id"/></blog-id>
                    <post-id><xsl:value-of select="doc('input:instance')/form/post-id"/></post-id>
                    <format><xsl:value-of select="doc('input:instance')/form/format"/></format>
                    <category><xsl:value-of select="doc('input:instance')/form/category"/></category>
                </form>
            </result>
        </action>
    </page>

    <!-- Home Page -->
    <page path-info="/blog" matcher="oxf:perl5-matcher" model="home/home-model.xpl" view="home/home-view.xsl"/>

    <!-- CSS generated by a pipeline (for standalone operation) -->
    <page id="layout-css" path-info="/config/theme/orbeon-layout.cssd" model="/config/theme/orbeon-layout.xpl"/>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
