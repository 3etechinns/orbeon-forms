    <page id="post" path-info="/blog/([^/]+)/([^/]+)/([^/]+)" matcher="oxf:perl5-matcher"
          xforms="recent-posts/recent-posts-xforms-model.xml"
          model="recent-posts/recent-posts-model.xpl"
          view="recent-posts/recent-posts-view.xpl">
        <param ref="/form/username"/>
        <param ref="/form/blog-id"/>
        <param ref="/form/post-id"/>
        <action when="/form/action = 'save'  and not(/form//*[@xxforms:valid = 'false' and not(ancestor-or-self::*[@xxforms:relevant = 'false'])])" action="post/do-save-comment.xpl">
            <result page="post" instance-passing="redirect">
                <xu:update select="/form/username">
                    <xu:value-of select="doc('input:instance')/form/username"/>
                </xu:update>
                <xu:update select="/form/blog-id">
                    <xu:value-of select="doc('input:instance')/form/blog-id"/>
                </xu:update>
                <xu:update select="/form/post-id">
                    <xu:value-of select="doc('input:instance')/form/post-id"/>
                </xu:update>
            </result>
        </action>
    </page>

    <!-- Page for a user's blog -->
    <page path-info="/blog/([^/]+)/([^/]+)" matcher="oxf:perl5-matcher"
          xforms="recent-posts/recent-posts-xforms-model.xml"
          model="recent-posts/recent-posts-model.xpl"
          view="recent-posts/recent-posts-view.xpl">
        <param ref="/form/username"/>
        <param ref="/form/blog-id"/>
    </page>

    <!-- Home Page for a user -->
    <page path-info="/blog/([^/]+)" matcher="oxf:perl5-matcher"
          xforms="user-home/user-home-xforms-model.xml"
          model="user-home/user-home-model.xpl"
          view="user-home/user-home-view.xsl">
        <param ref="/form/username"/>
    </page>

    <!-- Home Page -->
    <page path-info="/blog" matcher="oxf:perl5-matcher"
          view="home/home-view.xsl">
    </page>

    <!-- CSS generated by a pipeline (for standalone operation) -->
    <page id="layout-css" path-info="/oxf-theme/orbeon-layout.cssd" model="/oxf-theme/orbeon-layout.xpl"/>

    <epilogue url="oxf:/config/epilogue.xpl"/>

