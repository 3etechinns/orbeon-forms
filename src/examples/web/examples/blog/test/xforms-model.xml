<xforms:model xmlns:xforms="http://www.w3.org/2002/xforms"
              xmlns:xi="http://www.w3.org/2003/XInclude"
              xmlns:xs="http://www.w3.org/2001/XMLSchema"
              xmlns:xdt="http://www.w3.org/2004/07/xpath-datatypes">
    <xforms:instance>
        <form>
            <value1/>
            <value2/>
            <value3/>
        </form>
    </xforms:instance>
    <xforms:bind nodeset="value1" calculate="if (. castable as xs:integer) then . else 17"/>
    <xforms:bind nodeset="value2" calculate="if (. castable as xs:integer) then . else 99"/>

    <xforms:bind nodeset="value3" constraint=". castable as xs:positiveInteger and . = ../value1 + ../value2"/>
    <xforms:submission method="post"/>
</xforms:model>
