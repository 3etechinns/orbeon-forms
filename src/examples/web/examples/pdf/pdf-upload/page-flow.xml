<config xmlns="http://www.orbeon.com/oxf/controller" xmlns:oxf="http://www.orbeon.com/oxf/processors" xmlns:xu="http://www.xmldb.org/xupdate">
	<page id="main" path-info="/pdf-upload" xforms="pdf-form.xml" model="pdf-model.xpl" view="pdf-view.xsl">
		<action when="(/form/action = 'bookmarksonly' or /form/action = 'bookmarks' or /form/action = 'pages' or /form/action = 'meta' or /form/action = 'bookmarkpages') and /form/file != ''" action="pdf-upload.xpl"/>
		<action when="/form/action = 'goto-simple-pdf'">
			<result page="main" instance-passing="redirect-exit-portal"/>
		</action>
	</page>
	<epilogue url="oxf:/config/epilogue.xpl"/>
</config>
