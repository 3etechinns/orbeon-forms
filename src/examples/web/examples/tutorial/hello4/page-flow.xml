<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:xu="http://www.xmldb.org/xupdate">

    <page id="ask-name" path-info="/tutorial-hello4" xforms="xforms-model.xml" view="ask-name-view.xhtml">
        <action when="/myform/action = 'next'">
            <result page="display-name">
                <xu:update select="/myform/first-name">
                    <xu:value-of select="doc('oxf:instance')/myform/first-name"/>
                </xu:update>
            </result>
        </action>
    </page>

    <page id="display-name" path-info="/tutorial-hello4/display-name" xforms="xforms-model.xml" view="display-name-view.xhtml">
        <action when="/myform/action = 'back'">
            <result page="ask-name">
                <xu:update select="/myform/first-name">
                    <xu:value-of select="doc('oxf:instance')/myform/first-name"/>
                </xu:update>
            </result>
        </action>
    </page>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
