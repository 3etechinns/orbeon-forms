<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:oxf="http://www.orbeon.com/oxf/processors"
        xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
        instance-passing="forward">

    <!-- Files to serve directly (for standalone operation) -->
    <files path-info="*.gif"/>
    <files path-info="*.css"/>
    <files path-info="*.js"/>
    <files path-info="*.png"/>
    <files path-info="*.jpg"/>
    <files path-info="*.wsdl"/>
    <files path-info="*.html" mime-type="text/html"/>
    <files path-info="*.java" mime-type="text/plain"/>
    <files path-info="*.txt" mime-type="text/plain"/>

    <page id="summary" path-info="/bizdoc2" model="../bizdoc/summary/summary-model.xpl" view="summary/summary-view.xsl">
        <!-- Import documents -->
        <action when="/form/action = 'import-documents'" action="../bizdoc/summary/import-documents-action.xpl">
            <result page="summary"/>
        </action>
        <!-- View an existing document -->
        <action when="/form/action = 'show-detail'" action="../bizdoc/summary/find-document-action.xpl">
            <result page="detail" transform="oxf:xslt">
                <form xsl:version="2.0" xmlns="">
                    <document-id><xsl:value-of select="doc('input:action')/document-info/document-id"/></document-id>
                    <document><xsl:copy-of select="doc('input:action')/document-info/document/*"/></document>
                </form>
            </result>
        </action>
        <!-- Create a new document -->
        <action when="/form/action = 'new-document'" action="../bizdoc/summary/new-document-action.xpl">
            <result page="detail" transform="oxf:xslt">
                <form xsl:version="2.0" xmlns="">
                    <document-id><xsl:value-of select="doc('input:action')/document-info/document-id"/></document-id>
                    <document><xsl:copy-of select="doc('input:action')/document-info/document/*"/></document>
                </form>
            </result>
        </action>
        <!-- Delete documents -->
        <action when="/form/action = 'delete-documents'" action="../bizdoc/summary/delete-documents-action.xpl">
            <result page="summary"/>
        </action>
        <!-- View XML -->
        <action when="/form/action = 'show-xml'" action="../bizdoc/summary/find-document-action.xpl">
            <result page="xml-detail" transform="oxf:xslt" instance-passing="redirect-exit-portal">
                <document-id xsl:version="2.0" xmlns="">
                    <xsl:value-of select="doc('input:action')/document-info/document-id"/>
                </document-id>
            </result>
        </action>
    </page>

    <!-- Show XML document -->
    <page id="xml-detail" path-info="/direct/bizdoc2/xml-detail" model="detail/xml-detail-model.xpl"/>

    <page id="detail" path-info="/bizdoc2/detail" view="detail/detail-view.xsl">
        <!-- Back: Return to the summary page -->
        <action when="/form/action = 'back'">
            <result page="summary"/>
        </action>
    </page>
    
    <page path-info="/bizdoc2/save">
        <action action="../bizdoc/detail/save-document-action.xpl"/>
    </page>
    
    <!-- Home (for standalone operation) -->
    <page id="home" path-info="/">
        <action>
            <result page="summary"/>
        </action>
    </page>

    <!-- CSS generated by a pipeline (for standalone operation) -->
    <page id="layout-css" path-info="/config/theme/orbeon-layout.cssd" model="/config/theme/orbeon-layout.xpl"/>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
