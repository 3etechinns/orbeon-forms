<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:xu="http://www.xmldb.org/xupdate">

    <!-- Main page showing the address book -->
    <page path-info="/address-book2" model="../address-book/model.xpl" view="view.xsl"/>

    <!-- Add service -->
    <page path-info="/address-book2/add" view="../address-book/model.xpl">
        <action action="../address-book/add-action.xpl"/>
    </page>

    <!-- Delete service -->
    <page path-info="/address-book2/delete" view="../address-book/model.xpl">
        <action action="../address-book/delete-action.xpl"/>
    </page>

    <!-- Refresh service -->
    <page path-info="/address-book2/refresh" view="../address-book/model.xpl"/>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
