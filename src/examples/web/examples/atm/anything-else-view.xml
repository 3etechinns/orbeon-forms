<xhtml:html xmlns:f="http://orbeon.org/oxf/xml/formatting" xmlns:xhtml="http://www.w3.org/1999/xhtml"
    xmlns:xforms="http://www.w3.org/2002/xforms"
    xmlns:xxforms="http://orbeon.org/oxf/xml/xforms">

    <xhtml:head>
        <xhtml:title>Anything Else</xhtml:title>
    </xhtml:head>
    <xhtml:body>
        <xforms:group ref="/">
            <xhtml:p>
                Would you like anything else?
            </xhtml:p>
            <xhtml:p>
                <xforms:submit>
                    <xforms:label>Yes</xforms:label>
                    <xforms:setvalue ref="anything-else">yes</xforms:setvalue>
                </xforms:submit>
                <xforms:submit>
                    <xforms:label>No</xforms:label>
                    <xforms:setvalue ref="anything-else">no</xforms:setvalue>
                </xforms:submit>
                <xhtml:p style="margin-top: 3em">
                    <xhtml:a href="/atm">Back</xhtml:a> to ATM home<br/>
                </xhtml:p>
            </xhtml:p>
        </xforms:group>
    </xhtml:body>
</xhtml:html>
