<xhtml:html xsl:version="2.0"
            xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
            xmlns:f="http://orbeon.org/oxf/xml/formatting"
            xmlns:xhtml="http://www.w3.org/1999/xhtml"
            xmlns:xforms="http://www.w3.org/2002/xforms"
            xmlns:xxforms="http://orbeon.org/oxf/xml/xforms">
    <xhtml:head>
        <xhtml:title>Enter PIN</xhtml:title>
    </xhtml:head>
    <xhtml:body>
        <xforms:group ref="form">
            <xhtml:p>
                <xforms:secret ref="pin" xhtml:onkeypress="return(event.keyCode==13?form.go.click():true)">
                    <xforms:alert>Invalid PIN</xforms:alert>
                </xforms:secret>
                <xforms:submit xhtml:id="go">
                    <xforms:label>Access Account</xforms:label>
                    <xforms:setvalue ref="action">submit</xforms:setvalue>
                </xforms:submit>
            </xhtml:p>
            <xhtml:p>(The PIN is: 42)</xhtml:p>
        </xforms:group>
    </xhtml:body>
</xhtml:html>
