    <test description="Test for call-xpl() function" name="oxf:pipeline">
        <input name="config">
            <p:config xmlns:oxf="http://www.orbeon.com/oxf/processors" xmlns:xxforms="http://orbeon.org/oxf/xml/xforms">
                <p:param name="response" type="output"/>

                <p:processor name="oxf:unsafe-xslt">
                    <p:input name="data"><dummy/></p:input>
                    <p:input name="controls">
                        <xxforms:controls>
                            <xforms:group ref="/equation">
                                <xforms:group ref="screen">
                                    <xforms:output ref="." id="1"/>
                                </xforms:group>
                                <xforms:output ref="memory" id="2">
                                    <xforms:label>M:</xforms:label>
                                </xforms:output>
                                <xforms:trigger id="3">
                                    <xforms:label>Clear</xforms:label>
                                    <xforms:action ev:event="DOMActivate">
                                        <xforms:setvalue ref="/*/first" value="'3.141592'"/>
                                        <xforms:setvalue ref="instance('instance2')/third" value="xxforms:call-xpl('oxf:/unit-tests/xforms-server/xforms-call-xpl-pipeline.xpl', 'instance', /, 'result')/*/first"/>
                                        <xforms:setvalue ref="instance('instance2')/fourth" value="xxforms:call-xpl('oxf:/unit-tests/xforms-server/xforms-call-xpl-pipeline.xpl', 'instance', /*/first, 'result')/*"/>
                                    </xforms:action>
                                </xforms:trigger>
                            </xforms:group>
                        </xxforms:controls>
                    </p:input>
                    <p:input name="models">
                        <models>
                            <xforms:model>
                                <xforms:instance>
                                    <equation xmlns="">
                                        <screen>0</screen>
                                        <screenbuffer/>
                                        <first>123</first>
                                        <second>456</second>
                                        <memory>12</memory>
                                        <result/>
                                    </equation>
                                </xforms:instance>
                                <xforms:instance id="instance2">
                                    <other-instance>
                                        <first>0</first>
                                        <second>0</second>
                                        <third/>
                                        <fourth/>
                                    </other-instance>
                                </xforms:instance>
                                <xforms:bind nodeset="instance('instance2')/first"
                                    calculate="string(xxforms:call-xpl('oxf:/unit-tests/xforms-server/xforms-call-xpl-pipeline.xpl', 'instance', /, 'result')/*/first)"/>
                                <xforms:bind nodeset="instance('instance2')/second"
                                    calculate="string(xxforms:call-xpl('oxf:/unit-tests/xforms-server/xforms-call-xpl-pipeline.xpl', 'instance', /, 'result')/*/second)"/>
                                <xforms:bind nodeset="/*/screen"
                                    constraint="false()"/>
                            </xforms:model>
                        </models>
                    </p:input>
                    <p:input name="config">
                        <event-request xmlns="http://orbeon.org/oxf/xml/xforms" xsl:version="2.0" xmlns:context="java:org.orbeon.oxf.pipeline.StaticExternalContext">
                            <event name="DOMActivate" source-control-id="3"/>
                            <models>
                                <xsl:value-of select="context:encodeXML(doc('input:models'))"/>
                            </models>
                            <controls>
                                <xsl:value-of select="context:encodeXML(doc('input:controls'))"/>
                            </controls>
                            <instances>
                            </instances>
                        </event-request>
                    </p:input>
                    <p:output name="data" id="request"/>
                </p:processor>

                <p:processor name="oxf:pipeline">
                    <p:input name="config" href="/xforms/xforms-event.xpl"/>
                    <p:input name="request" href="#request"/>
                    <p:output name="response" id="encoded-response"/>
                </p:processor>

                <p:processor name="oxf:unsafe-xslt">
                    <p:input name="data" href="#encoded-response"/>
                    <p:input name="config">
                        <xsl:stylesheet version="2.0" xmlns:context="java:org.orbeon.oxf.pipeline.StaticExternalContext">
                            <xsl:import href="oxf:/oxf/xslt/utils/copy.xsl"/>
                            <xsl:template match="xxforms:instances">
                                <xsl:copy>
                                    <xsl:copy-of select="context:decodeXML(normalize-space(.))"/>
                                </xsl:copy>
                            </xsl:template>
                        </xsl:stylesheet>
                    </p:input>
                    <p:output name="data" ref="response"/>
                </p:processor>

            </p:config>
        </input>
        <output name="response">
            <xxf:event-response xmlns:xxf="http://orbeon.org/oxf/xml/xforms">
                <xxf:control-values>
                    <xxf:control id="1" value="0" valid="false"/>
                    <xxf:control id="2" value="12" label="M:"/>
                </xxf:control-values>
                <xxf:instances>
                    <instances>
                        <equation>
                            <screen xmlns:xxforms="http://orbeon.org/oxf/xml/xforms" xxforms:valid="false">0</screen>
                            <screenbuffer/>
                            <first>3.141592</first>
                            <second>456</second>
                            <memory>12</memory>
                            <result/>
                        </equation>
                        <other-instance>
                            <first>123</first>
                            <second>456</second>
                            <third>3.141592</third>
                            <fourth>3.141592</fourth>
                        </other-instance>
                    </instances>
                </xxf:instances>
                <xxf:divs/>
            </xxf:event-response>
        </output>
    </test>

