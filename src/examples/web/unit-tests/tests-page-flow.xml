    <test description="Reverse Params 1" name="oxf:unsafe-xslt">
        <input name="config" href="oxf:/oxf/private/page-flow/reverse-params.xsl"/>
        <input name="data">
            <url-rewrite>
                <other-config-param-1>This is it 1</other-config-param-1>
                <path-info>/([^/]*)/([^/]*)/([^/]*)/edit</path-info>
                <other-config-param-2>This is it 2</other-config-param-2>
                <parameters>
                    <parameter>
                        <name>name1</name>
                        <value>value1</value>
                    </parameter>
                </parameters>
                <parameters>
                    <parameter>
                        <name>name2</name>
                        <value>value2</value>
                    </parameter>
                </parameters>
            </url-rewrite>
        </input>
        <input name="instance">
            <form>
                <album-id>123</album-id>
                <image-id>456</image-id>
                <object id="789"/>
            </form>
        </input>
        <input name="params">
            <params>
                <param xmlns="http://www.orbeon.com/oxf/controller" ref="/form/album-id"/>
                <param xmlns="http://www.orbeon.com/oxf/controller" ref="/form/image-id"/>
                <param xmlns="http://www.orbeon.com/oxf/controller" ref="/form/object/@id"/>
            </params>
        </input>
        <output name="data">
            <url-rewrite>
                <other-config-param-1>This is it 1</other-config-param-1>
                <path-info>/123/456/789/edit</path-info>
                <other-config-param-2>This is it 2</other-config-param-2>
                <parameters>
                    <parameter>
                        <name>name1</name>
                        <value>value1</value>
                    </parameter>
                </parameters>
                <parameters>
                    <parameter>
                        <name>name2</name>
                        <value>value2</value>
                    </parameter>
                </parameters>
            </url-rewrite>
        </output>
    </test>

