<html xmlns:f="http://orbeon.org/oxf/xml/formatting" xmlns:portlet="http://www.orbeon.org/oxf/portlet">
    <body background="/images/body-background.png">
        <!-- Simple rewrites -->
        <div>
            <form action="/my-action">
                <a href="/path">Click Here!</a>
                <img src="/my-image.png"/>
                <a href="path">Click Here!</a>
                <img src="my-image.png"/>
                <img src="?a=1&amp;b=2"/>
                <input type="image" src="/my-image.png"/>
                <input type="text" src="/my-image.png"/>
            </form>
        </div>
        <!-- Check f:url-norewrite -->
        <div>
            <form action="/my-action" f:url-norewrite="true">
                <a href="/path">Click Here!</a>
                <img src="/my-image.png" f:url-norewrite="false"/>
                <a href="path">Click Here!</a>
                <img src="my-image.png" f:url-norewrite="false"/>
                <img src="?a=1&amp;b=2"/>
            </form>
        </div>
        <!-- Text handling -->
        <div>
            <p>123wsrp_rewrite456</p>
            <script>
                <p>123wsrp_rewrite456</p>
            </script>
            <SCRIPT>
                <p>123wsrp_rewrite456</p>
            </SCRIPT>
        </div>
        <!-- Table background -->
        <table>
            <tr>
                <td background="/images/td-background.png">
                    Hello
                </td>
            </tr>
        </table>
    </body>
    <brody background="/images/body-background.png"/>
</html>