<group description="Java Processor" xmlns:p="http://www.orbeon.com/oxf/pipeline">
    <test description="List Inputs" name="oxf:pipeline">
        <input name="config">
            <p:config xmlns:p="http://www.orbeon.com/oxf/pipeline"
                xmlns:oxf="http://www.orbeon.com/oxf/processors">

                <p:param type="output" name="data"/>

                <p:processor name="oxf:identity">
                    <p:input name="data">
                        <test-data>
                            <data-1>
                                <value-1>1</value-1>
                            </data-1>
                            <data-2>
                                <value-2>2</value-2>
                            </data-2>
                            <data-3>
                                <value-3>3</value-3>
                            </data-3>
                            <data-4>
                                <value-4>4</value-4>
                            </data-4>
                        </test-data>
                    </p:input>
                    <p:output name="data" id="test-data"/>
                </p:processor>

                <p:processor name="oxf:java">
                    <p:input name="config">
                        <config sourcepath="oxf:/unit-tests" class="ListInputs"/>
                    </p:input>
                    <p:input name="required-input-1" href="#test-data#xpointer(/*/data-1)"/>
                    <p:input name="required-input-2" href="#test-data#xpointer(/*/data-2)"/>
                    <p:input name="optional-input-1" href="#test-data#xpointer(/*/data-3)"/>
                    <p:input name="optional-input-2" href="#test-data#xpointer(/*/data-4)"/>
                    <p:output name="list" ref="data"/>
                </p:processor>

            </p:config>
        </input>
        <output name="data">
            <inputs>
                <input>required-input-2</input>
                <data-2>
                    <value-2>2</value-2>
                </data-2>
                <input>optional-input-1</input>
                <data-3>
                    <value-3>3</value-3>
                </data-3>
                <input>required-input-1</input>
                <data-1>
                    <value-1>1</value-1>
                </data-1>
                <input>optional-input-2</input>
                <data-4>
                    <value-4>4</value-4>
                </data-4>
            </inputs>
        </output>
    </test>

</group>
