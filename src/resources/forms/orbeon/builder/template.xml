<xhtml:html xmlns:xhtml="http://www.w3.org/1999/xhtml"
      xmlns:xforms="http://www.w3.org/2002/xforms"
      xmlns:xs="http://www.w3.org/2001/XMLSchema"
      xmlns:ev="http://www.w3.org/2001/xml-events"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      xmlns:xxi="http://orbeon.org/oxf/xml/xinclude"
      xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
      xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
      xmlns:saxon="http://saxon.sf.net/" >
    <xhtml:head>
        <xhtml:title>Empty Orbeon Form</xhtml:title>
        <xhtml:link rel="stylesheet" href="/ops/css/yui/reset-fonts-grids.css" type="text/css"/>
        <xhtml:link rel="stylesheet" href="/ops/css/yui/base-min.css" type="text/css"/>
        <xhtml:link rel="stylesheet" href="/apps/fr/style/form-runner.css" type="text/css"/>
        
        <xforms:model id="fr-form-model">

            <!-- Main instance -->
            <xforms:instance id="fr-form-instance">
                <form>
                    <section-1>
                        <control-1/>
                    </section-1>
                </form>
            </xforms:instance>

            <!-- Metadata -->
            <xforms:instance id="fr-form-metadata" xxforms:readonly="true">
                <metadata>
                    <project-id/>
                    <form-id/>
                    <title>[Please give this form a title]</title>
                    <description>[Please optionally describe this form]</description>
                    <author/>
                </metadata>
            </xforms:instance>

            <!-- All form resources -->
            <xforms:instance id="fr-form-resources" xxforms:readonly="true">
                <resources>
                    <resource xml:lang="en">
                        <section-1>
                            <label>[Please give this section a title]</label>
                        </section-1>
                        <control-1>
                            <label>[Please give this control a title]</label>
                            <hint>[Please modify the hint]</hint>
                            <help>[Please modify the help]</help>
                            <alert>[Please modify the alert]</alert>
                        </control-1>
                    </resource>
                </resources>
            </xforms:instance>

        </xforms:model>

    </xhtml:head>
    <xhtml:body>
        <fr:view>
            <xforms:label ref="instance('fr-form-metadata')/title"/>
            <xhtml:img src="/apps/fr/style/orbeon-logo-trimmed-transparent-42.png"/>
            <fr:body>
                <fr:section id="section-1-section" context="section-1">
                    <xforms:label ref="$form-resources/section-1/label"/>
                    <fr:grid columns="2">
                        <xhtml:tr>
                            <xhtml:td>
                                <xforms:input id="control-1-control" ref="control-1">
                                    <xforms:label ref="$form-resources/control-1/label"/>
                                    <xforms:hint ref="$form-resources/control-1/hint"/>
                                    <xforms:help ref="$form-resources/control-1/help"/>
                                    <xforms:alert ref="$form-resources/control-1/alert"/>
                                </xforms:input>
                            </xhtml:td>
                            <xhtml:td/>
                        </xhtml:tr>
                    </fr:grid>
                </fr:section>
            </fr:body>
        </fr:view>
    </xhtml:body>
</xhtml:html>
