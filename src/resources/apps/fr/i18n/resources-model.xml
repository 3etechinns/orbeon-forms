<xforms:model xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        xmlns:xforms="http://www.w3.org/2002/xforms"
        xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
        xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
        xmlns:xhtml="http://www.w3.org/1999/xhtml"
        xmlns:xi="http://www.w3.org/2001/XInclude"
        xmlns:xxi="http://orbeon.org/oxf/xml/xinclude"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        id="fr-resources-model">

    <!-- Instance containing the current language -->
    <!-- NOTE: The default language is set during initialization below -->
    <xforms:instance id="fr-language-instance">
        <language xmlns=""/>
    </xforms:instance>

    <!-- Instance containing the default language -->
    <xforms:instance id="fr-default-language-instance">
        <language xmlns=""/>
    </xforms:instance>

    <xxforms:variable name="lang" select="instance('fr-language-instance')"/>

    <!-- XForms instance containing the current form resources -->
    <xforms:instance id="fr-current-form-resources">
        <resource xmlns=""/>
    </xforms:instance>

    <!-- Instance containing the Form Runner resources -->
    <xforms:instance id="fr-fr-resources"><dummy/></xforms:instance>
    <xforms:submission id="fr-get-fr-resources"
            serialization="none" method="get"
            resource="{xxforms:property('oxf.fr.appserver.uri')}/fr/service/i18n/fr-resources/{xxforms:instance('fr-form-metadata')/application-name}/{xxforms:instance('fr-form-metadata')/form-name}" 
            replace="instance" instance="fr-fr-resources" xxforms:readonly="true"/>
            <!-- TODO: We would like make this xxforms:shared="application", but if we do modifications to the properties are not taken into account -->

    <!-- Instance containing the current Form Runner resources -->
    <xforms:instance id="fr-fr-current-resources">
        <resource xmlns=""/>
    </xforms:instance>

    <!-- Instance containing all the ISO 639-1 languages -->
    <xforms:instance id="fr-languages-instance" src="oxf:/apps/fr/i18n/languages.xml" xxforms:readonly="true" xxforms:shared="application"/>

    <!-- Copy resources of the selected language, using the first language declared if the no matching language is found -->
    <xforms:action ev:event="fr-update-language">

        <!-- Use language provided as a request parameter if it exists -->
        <xforms:action if="$lang = ''">
            <xforms:setvalue ref="$lang" value="xxforms:get-request-parameter('fr-language')"/>
            <xforms:message if="$lang != ''" level="xxforms:log-info">Setting language from request: <xforms:output value="$lang"/></xforms:message>
        </xforms:action>
        <!-- Else use language from session if it exists -->
        <xforms:action if="$lang = ''">
            <xforms:setvalue ref="$lang" value="xxforms:get-session-attribute('fr-language')"/>
            <xforms:message if="$lang != ''" level="xxforms:log-info">Setting language from session: <xforms:output value="$lang"/></xforms:message>
        </xforms:action>
        <!-- Else use default language in resources if no language was found or if language found does not exist in resources -->
        <xforms:action if="$lang = '' or not(xs:string($lang) = xxforms:instance('fr-form-resources')/resource/@xml:lang)">
            <!-- Get default language from properties -->
            <xxforms:variable name="default-language" select="instance('fr-default-language-instance')" as="xs:string"/>
            <!-- Try first to get default language, or just take first language if default doesn't exist -->
            <xforms:setvalue ref="$lang" value="xxforms:instance('fr-form-resources')/(resource[@xml:lang = $default-language], resource[1])[1]/@xml:lang"/>
            <xforms:message level="xxforms:log-info">Setting language using default: <xforms:output value="$lang"/></xforms:message>
        </xforms:action>

        <!-- Update resources -->
        <xforms:insert nodeset="instance('fr-current-form-resources')"
                       origin="xxforms:instance('fr-form-resources')/(resource[@xml:lang = $lang], resource[1])[1]"/>
        <xforms:insert nodeset="instance('fr-fr-current-resources')"
                       origin="instance('fr-fr-resources')/(resource[@xml:lang = $lang], resource[1])[1]"/>

        <!-- Save current language into the session -->
        <xforms:insert context="." origin="xxforms:set-session-attribute('fr-language', xs:string($lang))"/>
    </xforms:action>

    <!-- Respond to language change in the UI -->
    <xforms:action ev:observer="fr-language-selector" ev:event="xforms-value-changed DOMActivate">
        <xforms:dispatch name="fr-update-language" target="fr-resources-model"/>
    </xforms:action>

    <!-- Initialize default language -->
    <xforms:action ev:event="xforms-model-construct-done">
        <xforms:setvalue ref="instance('fr-default-language-instance')"
                         value="xxforms:property(string-join(('oxf.fr.default-language', xxforms:instance('fr-parameters-instance')/app, xxforms:instance('fr-parameters-instance')/form), '.'))"/>
        <xforms:message level="xxforms:log-info">Getting default language: <xforms:output value="instance('fr-default-language-instance')"/></xforms:message>
        <xforms:send submission="fr-get-fr-resources"/>
    </xforms:action>

    <!-- Initialize language and resources if there are any resources at all -->
    <!-- NOTE: The Form Runner summary, for example, loads resources dynamically, and triggers fr-update-language itself -->
    <xforms:action ev:event="xforms-model-construct-done" if="exists(xxforms:instance('fr-form-resources')/resource)">
        <!-- Get initial resources for current language (will also save current language into the session) -->
        <xforms:dispatch name="fr-update-language" target="fr-resources-model"/>
    </xforms:action>

</xforms:model>
