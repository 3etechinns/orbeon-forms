<xforms:model id="fr-navigation-model"
              xmlns:xs="http://www.w3.org/2001/XMLSchema"
              xmlns:xforms="http://www.w3.org/2002/xforms"
              xmlns:ev="http://www.w3.org/2001/xml-events"
              xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
              xmlns:xi="http://www.w3.org/2001/XInclude"
              xmlns:xxi="http://orbeon.org/oxf/xml/xinclude"
              xmlns:f="http://orbeon.org/oxf/xml/formatting"
              xmlns:xhtml="http://www.w3.org/1999/xhtml"
              xmlns:saxon="http://saxon.sf.net/"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- This dummy instance ensures that xforms:submission doesn't complain about an empty single-node binding -->
    <xforms:instance id="fr-navigation-instance"><dummy/></xforms:instance>

    <xxforms:variable name="parameters" select="xxforms:instance('fr-parameters-instance')"/>

    <!-- NOTE: Passing the language is not strictly necessary since the current language is in the session but from a
         URL design perspective having the language better identifies the resource -->

    <xforms:submission id="fr-edit-switch-script-submission"
        resource="/fr/{$parameters/app}/{$parameters/form}/{$parameters/mode}/{$parameters/document}/?fr-language={xxforms:instance('fr-language-instance')}{if (not(property('xxforms:noscript'))) then '&amp;fr-noscript=true' else ''}"
        method="post" ref="xxforms:instance('fr-form-instance')" replace="all" validate="false"/>

    <xforms:submission id="fr-print-submission"
        resource="/fr/{$parameters/app}/{$parameters/form}/view/{$parameters/document}/?fr-language={xxforms:instance('fr-language-instance')}{if (property('xxforms:noscript')) then '&amp;fr-noscript=true' else ''}"
        method="post" ref="xxforms:instance('fr-form-instance')" replace="all" validate="false"
        xxforms:target="_blank" xxforms:show-progress="false"/>

    <xforms:submission id="fr-pdf-submission"
        resource="/fr/{$parameters/app}/{$parameters/form}/pdf/{$parameters/document}/?fr-language={xxforms:instance('fr-language-instance')}"
        method="post" ref="xxforms:instance('fr-form-instance')" replace="all" validate="false"
        xxforms:target="_blank" xxforms:show-progress="false"/>

    <!-- Go back to the Form Runner summary page -->
    <xforms:action ev:event="fr-goto-summary">
        <xforms:load resource="/fr/{$parameters/app}/{$parameters/form}/summary/{if (property('xxforms:noscript')) then '?fr-noscript=true' else ''}"/>
    </xforms:action>

</xforms:model>
