    <xbl:binding-xxx id="test-component" element="fr|bar">

        <!-- Orbeon Form Builder Component Metadata -->
        <metadata xmlns="http://orbeon.org/oxf/xml/form-builder">
            <display-name lang="en">A Thing</display-name>
            <display-name lang="fr">Une chose</display-name>
            <description lang="en">This is a little thing</description>
            <description lang="fr">Ceci est une petite chose</description>
            <icon xml:lang="en">
                <small-icon>/apps/fr/style/images/silk/plugin.png</small-icon>
                <large-icon>/apps/fr/style/images/silk/plugin.png</large-icon>
            </icon>
            <datatype>xs:string</datatype>
            <template>
                 <fr:bar>
                     <xforms:label ref=""/>
                     <xforms:hint ref=""/>
                     <xforms:help ref=""/>
                     <xforms:alert ref=""/>
                </fr:bar>
            </template>
        </metadata>
        
        <!-- Template -->
        <xbl:template>
            <xhtml:div class="test-class">
                <xbl:content includes="xforms|label,xforms|help,xforms|hint"/>
                <xforms:input xbl:attr="ref bind">
                    <xforms:label>Value 2</xforms:label>
                </xforms:input>
            </xhtml:div>
        </xbl:template>
    </xbl:binding-xxx>

    <xbl:binding-xxx id="fr-select1-binding" element="fr|select1"><!-- [appearance='xxforms|full'] -->

        <!-- Orbeon Form Builder Component Metadata -->
        <metadata xmlns="http://orbeon.org/oxf/xml/form-builder">
            <display-name lang="en">Link Select</display-name>
            <display-name lang="fr">Selection lien</display-name>
            <description lang="en">Single selection control which uses a series of links</description>
            <description lang="fr">Contrôle de sélection unique utilisant une série de liens</description>
            <icon xml:lang="en">
                <small-icon>/apps/fr/style/images/silk/plugin.png</small-icon>
                <large-icon>/apps/fr/style/images/silk/plugin.png</large-icon>
            </icon>
            <datatype>xs:string</datatype>
            <template>
                 <fr:select1>
                     <xforms:label ref=""/>
                     <xforms:hint ref=""/>
                     <xforms:help ref=""/>
                     <xforms:alert ref=""/>
                     <xforms:itemset nodeset="">
                         <xforms:label ref="label"/>
                         <xforms:value ref="value"/>
                     </xforms:itemset>
                </fr:select1>
            </template>
        </metadata>

        <xbl:template>
            <xforms:group xbl:attr="ref bind">
                <xxforms:variable name="ref" select="."/>
                <!-- NOTE: the code below doesn't work because xbl:attr is unable to copy attributes from other elements -->
                <xforms:repeat model="fr-resources-model" xbl:attr="xforms|itemset[nodeset]">
                    <xxforms:variable name="position" select="position()"/>
                    <xxforms:variable name="label" xbl:attr="select=xforms|itemset xforms|label[ref]"/>
                    <xxforms:variable name="value" xbl:attr="select=xforms|itemset xforms|value[ref]"/>
                    <xforms:group ref=".[$position > 1]"> | </xforms:group>
                    <xforms:trigger ref=".[$value != $ref]" appearance="minimal">
                        <xforms:label value="$label"/>
                        <xforms:action ev:event="DOMActivate">
                            <xforms:setvalue ref="$ref" value="$value"/>
                        </xforms:action>
                    </xforms:trigger>
                    <xforms:output ref=".[$value = $ref]" value="$label"/>
                </xforms:repeat>
            </xforms:group>
        </xbl:template>
    </xbl:binding-xxx>

    <xbl:binding id="dateTime-component" element="fr|dateTime">

        <!-- Orbeon Form Builder Component Metadata -->
        <metadata xmlns="http://orbeon.org/oxf/xml/form-builder">
            <display-name lang="en">Date and Time</display-name>
            <display-name lang="fr">[Custom Date and Time]</display-name>
            <description lang="en">Custom widget handling date and time values</description>
            <description lang="fr">[Custom widget handling date and time values]</description>
            <icon xml:lang="en">
                <small-icon>/apps/fr/style/images/silk/clock_link.png</small-icon>
                <large-icon>/apps/fr/style/images/silk/clock_link.png</large-icon>
            </icon>
            <datatype>xs:dateTime</datatype>
            <template>
                 <fr:dateTime>
                     <xforms:label ref=""/>
                     <xforms:hint ref=""/>
                     <xforms:help ref=""/>
                     <xforms:alert ref=""/>
                </fr:dateTime>
            </template>
        </metadata>

        <xbl:template>
            <!-- NOTE: Once new scoping rules are in place, the following group should work -->
            <xforms:group xbl:attr="ref bind">
                <xbl:content includes="xforms|label,xforms|help,xforms|hint"/>
                
                <xxforms:variable name="result" select="." as="node()*"/>
                <xforms:group ref="$result">
                    <xforms:action ev:event="xforms-value-changed">
                        <xforms:setvalue model="dateTime-model" ref="instance('dateTime-instance')/date" value="context()/substring-before(., 'T')"/>
                        <xforms:setvalue model="dateTime-model" ref="instance('dateTime-instance')/time" value="context()/substring-after(., 'T')"/>
                    </xforms:action>
                </xforms:group>

                <!-- Local model containing the date and time  -->
                <xforms:model id="dateTime-model">
                    <xforms:instance id="dateTime-instance">
                        <values>
                            <date/>
                            <time/>
                        </values>
                    </xforms:instance>
                    <xforms:bind nodeset="date" type="xs:date"/>
                    <xforms:bind nodeset="time" type="xs:time"/>
                </xforms:model>

                <!-- Local controls -->
                <xforms:group model="dateTime-model">
                    <xforms:input ref="date"/>
                    <xforms:input ref="time"/>
                    <xforms:action ev:event="xforms-value-changed">
                        <xforms:setvalue ref="$result" value="concat(context()/date, 'T', context()/time)"/>
                    </xforms:action>
                </xforms:group>
            </xforms:group>
        </xbl:template>
    </xbl:binding>

