<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:oxf="http://www.orbeon.com/oxf/processors"
        xmlns:xu="http://www.xmldb.org/xupdate">

    <page id="main" path-info="/xforms-upload/" model="main-model.xpl" view="main-view.xsl">
        <action when="/form/action = 'ws-upload' and /form/files/file != ''" action="do-ws-upload.xpl"/>
        <action when="/form/action = 'db-upload' and /form/files/file != ''" action="do-db-upload.xpl"/>
        <action when="/form/action = 'goto-simple-upload'"><result page="main" instance-passing="redirect-exit-portal"/></action>
    </page>

    <page id="background-upload" path-info="/xforms-upload/background" view="do-background-upload.xpl">
    </page>

    <page path-info="/xforms-upload/db-image/(.*)" matcher="oxf:perl5-matcher"
          default-submission="database-upload-default-submission.xml"
          model="database-upload-model.xpl">
        <setvalue ref="/form/image-id" matcher-group="1"/>
    </page>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
