<element name="config" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    xmlns="http://relaxng.org/ns/structure/1.0">
    <interleave>
        <element name="file">
            <data type="string"/>
        </element>
        <optional>
            <element name="directory">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <element name="content-type">
                <choice>
                    <value>text/xml</value>
                    <value>text/html</value>
                    <value>text/plain</value>
                </choice>
            </element>
        </optional>
        <!-- Version does not seem to work -->
        <optional>
            <element name="version">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <element name="public-doctype">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <element name="system-doctype">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <element name="omit-xml-declaration">
                <data type="boolean"/>
            </element>
        </optional>
        <optional>
            <element name="standalone">
                <data type="boolean"/>
            </element>
        </optional>
        <optional>
            <element name="encoding">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <element name="indent">
                <data type="boolean"/>
            </element>
        </optional>
        <optional>
            <element name="indent-amount">
                <data type="integer"/>
            </element>
        </optional>
        <optional>
            <element name="cache-control">
                <optional>
                    <element name="use-local-cache">
                        <choice>
                            <value>true</value>
                            <value>false</value>
                        </choice>
                    </element>
                </optional>
            </element>
        </optional>
    </interleave>
</element>
