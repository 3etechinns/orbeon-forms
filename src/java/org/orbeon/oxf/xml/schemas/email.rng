<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0">

    <start>
        <element name="message">
            <optional>
                <element name="smtp-host">
                    <data type="string"/>
                </element>
            </optional>
            <element name="from">
                <ref name="address"/>
            </element>
            <oneOrMore>
                <element name="to">
                    <ref name="address"/>
                </element>
            </oneOrMore>
            <element name="subject">
                <data type="string"/>
            </element>
            <ref name="body"/>
        </element>
    </start>

    <define name="address">
        <interleave>
            <element name="email">
                <data type="string"/>
            </element>
            <optional>
                <element name="name">
                    <data type="string"/>
                </element>
            </optional>
        </interleave>
    </define>


    <define name="body">
        <choice>
            <group>
                <!-- Old style, one part, text only -->
                <element name="text">
                    <data type="string"/>
                </element>
            </group> 
            <!-- New style, MIME multipart -->
            <group>
                <element name="body">
                    <optional>
                        <attribute name="mime-multipart">
                            <choice>
                                <!-- default -->
                                <value>mixed</value>
                                <value>alternative</value>
                                <value>related</value>
                            </choice>
                        </attribute>
                    </optional>
                    <oneOrMore>
                        <element name="part">
                            <attribute name="name"/>
                            <attribute name="content-type"/>
                            <optional>
                                <attribute name="content-disposition"/>
                            </optional>
                            <optional>
                                <attribute name="content-id"/>
                            </optional>
                            <!-- Allow either an "src" attribute, or body content -->
                            <choice>
                                <attribute name="src">
                                    <data type="anyURI"/>
                                </attribute>
                                <choice>
                                    <ref name="anyElement"/>
                                    <text/><!-- Why do we need this here? -->
                                </choice>
                            </choice>
                        </element>
                    </oneOrMore>
                </element>
            </group>
        </choice>
    </define>


    <define name="anyElement">
        <element>
            <anyName/>
            <zeroOrMore>
                <choice>
                    <attribute>
                        <anyName/>
                    </attribute>
                    <text/>
                    <ref name="anyElement"/>
                </choice>
            </zeroOrMore>
        </element>
    </define>

</grammar>
