<element name="config" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    xmlns="http://relaxng.org/ns/structure/1.0">
    <element name="delete">
        <interleave>
            <element name="file">
                <data type="string"/>
            </element>
            <optional>
                <element name="directory">
                    <data type="string"/>
                </element>
            </optional>
        </interleave>
    </element>
    <!-- In the future, we can support other operations -->
</element>
