<grammar xmlns="http://relaxng.org/ns/structure/1.0"
    datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">

    <start>
        <element name="config">
            <interleave>
                <element name="template">
                    <attribute name="href">
                        <data type="anyURI"/>
                    </attribute>
                </element>
                <zeroOrMore>
                    <element name="field">
                        <attribute name="left-position">
                            <data type="decimal"/>
                        </attribute>
                        <attribute name="top-position">
                            <data type="decimal"/>
                        </attribute>
                        <attribute name="spacing">
                            <data type="decimal"/>
                        </attribute>
                        <attribute name="font-family">
                            <data type="string"/>
                        </attribute>
                        <attribute name="font-size">
                            <data type="decimal"/>
                        </attribute>
                        <optional>
                            <attribute name="size">
                                <data type="positiveInteger"/>
                            </attribute>
                        </optional>
                        <attribute name="ref">
                            <data type="string"/>
                        </attribute>
                    </element>
                </zeroOrMore>
            </interleave>
        </element>
    </start>

</grammar>
