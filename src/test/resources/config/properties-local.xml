<properties xmlns:xs="http://www.w3.org/2001/XMLSchema"
            xmlns:oxf="http://www.orbeon.com/oxf/processors"
            xmlns:xxf="http://orbeon.org/oxf/xml/xforms">

    <property as="xs:string"  name="oxf.fr.persistence.provider.*.*.*"                      value="mysql"/>
    <property as="xs:anyURI"  name="oxf.fr.persistence.mysql-ng.uri"                        value="/fr/service/mysql"/>
    <property as="xs:string"  name="oxf.fr.persistence.mysql-ng.datasource"                 value="mysql_tomcat"/>
    <property as="xs:string"  name="oxf.fr.persistence.provider.orbeon.bookshelf.data"      value="exist"/>             <!-- So we can find the imported data -->

    <property as="xs:string"  processor-name="oxf:page-flow" name="service-public-methods"  value="GET HEAD POST PUT DELETE"/>
    <property as="xs:string"  processor-name="oxf:page-flow" name="page-public-methods"     value="GET HEAD POST PUT DELETE"/>
    <property as="xs:NMTOKENS" name="oxf.xforms.logging.debug"
                               value="document model submission submission-details submission-body submission-details
                                      control event action analysis submission-details server server-body html
                                      analysis-xbl-tree resources"/>

</properties>