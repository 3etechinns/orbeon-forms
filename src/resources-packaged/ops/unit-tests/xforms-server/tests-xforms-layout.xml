    <test description="New layout for xforms:input" name="oxf:pipeline">
        <input name="config" href="xforms-server/wrap-xforms-controls.xpl"/>
        <input name="document">
            <xhtml:html xmlns:xs="http://www.w3.org/2001/XMLSchema">
                <xhtml:head>
                    <xforms:model id="main-model" xxforms:new-xhtml-layout="true">
                        <xforms:instance id="tests">
                            <instance>Hello!</instance>
                        </xforms:instance>
                        <xforms:bind nodeset="." type="xs:NCName" required="true()"/>
